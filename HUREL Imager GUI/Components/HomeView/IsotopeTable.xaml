<UserControl x:Class="HUREL_Imager_GUI.Components.IsotopeTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HUREL_Imager_GUI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800"
             Background="White">
    
            <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 헤더 -->
                        <Border Grid.Row="0" Background="{StaticResource CustomDarkBlue}" BorderBrush="Gray" BorderThickness="1">
                    <TextBlock Text="Isotope List" Foreground="White" FontSize="16" FontWeight="Bold" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
        
        <!-- 핵종 버튼들 -->
        <Grid Grid.Row="1" x:Name="IsotopeButtonsGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            
            <!-- 공통 버튼 스타일 -->
            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="Height" Value="48"/>
                    <Setter Property="Margin" Value="1"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="Gray"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Foreground" Value="Gray"/>
                </Style>
            </Grid.Resources>
            
            <!-- 첫 번째 줄 (10개) -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" Content="Co-58"/>
                <Button Grid.Column="1" Content="Co-60"/>
                <Button Grid.Column="2" Content="Cs-137"/>
                <Button Grid.Column="3" Content="Eu-152"/>
                <Button Grid.Column="4" Content="Cs-134"/>
                <Button Grid.Column="5" Content="I-131"/>
                <Button Grid.Column="6" Content="Pu-238"/>
                <Button Grid.Column="7" Content="Pu-239"/>
                <Button Grid.Column="8" Content="Pu-240"/>
                <Button Grid.Column="9" Content="Pu-241"/>
            </Grid>
            
            <!-- 두 번째 줄 (10개) -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" Content="Ir-192"/>
                <Button Grid.Column="1" Content="Se-75"/>
                <Button Grid.Column="2" Content="U-235"/>
                <Button Grid.Column="3" Content="U-238"/>
                <Button Grid.Column="4" Content="Am-241"/>
                <Button Grid.Column="5" Content="Ba-133"/>
                <Button Grid.Column="6" Content="Na-22"/>
                <Button Grid.Column="7" Content="Cd-109"/>
                <Button Grid.Column="8" Content="Tc-99m"/>
                <Button Grid.Column="9" Content="Annihilation"/>
            </Grid>
            
            <!-- 세 번째 줄 (10개) -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" Content="K-40"/>
                <Button Grid.Column="1" Content="Tl-208"/>
                <Button Grid.Column="2" Content="Bi-214"/>
                <Button Grid.Column="3" Content="Pb-212"/>
                <Button Grid.Column="4" Content="F-18"/>
                <Button Grid.Column="5" Content=""/>
                <Button Grid.Column="6" Content=""/>
                <Button Grid.Column="7" Content=""/>
                <Button Grid.Column="8" Content=""/>
                <Button Grid.Column="9" Content=""/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
